<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TresFragment">



    <TextView
        android:id="@+id/vodacoin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vodacoins"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_centerHorizontal="true"
        ></TextView>
        >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vodacoin_text">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="75dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 >




                <Button
                    android:id="@+id/playGames"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/play_games"
                    android:background="@drawable/shape_linear_layout"
                    ></Button>

                <Button
                    android:id="@+id/survey"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="@string/survey"
                    android:background="@drawable/shape_linear_layout"

                    ></Button>

                <Button
                    android:id="@+id/task"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="@string/task"
                    android:background="@drawable/shape_linear_layout"
                    ></Button>

                <Button
                    android:id="@+id/arButton"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="@string/camera"
                    android:background="@drawable/shape_linear_layout"

                    ></Button>

                <Button
                    android:id="@+id/spend_voda_coins"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:text="@string/spendVodaCoins"
                    android:background="@drawable/shape_linear_layout"
                    ></Button>




            </LinearLayout>



        </HorizontalScrollView>
    </ScrollView>




</RelativeLayout>